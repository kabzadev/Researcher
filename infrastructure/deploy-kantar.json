{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.37.4.10188",
      "templateHash": "10560122680982526953"
    }
  },
  "parameters": {
    "baseName": {
      "type": "string",
      "defaultValue": "kaia-researcher",
      "metadata": {
        "description": "Base name for all resources"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Azure region"
      }
    },
    "appPassword": {
      "type": "securestring",
      "metadata": {
        "description": "App password for the application"
      }
    },
    "containerImageTag": {
      "type": "string",
      "defaultValue": "v1",
      "metadata": {
        "description": "Container image tag to deploy"
      }
    },
    "openAiModelName": {
      "type": "string",
      "defaultValue": "gpt-4o",
      "metadata": {
        "description": "Azure OpenAI model to deploy"
      }
    },
    "openAiModelVersion": {
      "type": "string",
      "defaultValue": "2024-08-06",
      "metadata": {
        "description": "Azure OpenAI model version"
      }
    },
    "openAiCapacity": {
      "type": "int",
      "defaultValue": 30,
      "metadata": {
        "description": "Azure OpenAI deployment SKU capacity (1000s of tokens per minute)"
      }
    },
    "cpuCores": {
      "type": "string",
      "defaultValue": "1.0",
      "metadata": {
        "description": "Container App CPU cores"
      }
    },
    "memory": {
      "type": "string",
      "defaultValue": "2.0Gi",
      "metadata": {
        "description": "Container App memory"
      }
    },
    "minReplicas": {
      "type": "int",
      "defaultValue": 1,
      "metadata": {
        "description": "Min replicas for Container App"
      }
    },
    "maxReplicas": {
      "type": "int",
      "defaultValue": 3,
      "metadata": {
        "description": "Max replicas for Container App"
      }
    }
  },
  "variables": {
    "uniqueSuffix": "[uniqueString(resourceGroup().id)]",
    "acrName": "[format('{0}{1}', replace(parameters('baseName'), '-', ''), variables('uniqueSuffix'))]",
    "kvName": "[format('{0}-kv-{1}', parameters('baseName'), variables('uniqueSuffix'))]",
    "openAiName": "[format('{0}-openai', parameters('baseName'))]",
    "logAnalyticsName": "[format('{0}-law', parameters('baseName'))]",
    "containerAppEnvName": "[format('{0}-env', parameters('baseName'))]",
    "containerAppName": "[format('{0}-api', parameters('baseName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.CognitiveServices/accounts",
      "apiVersion": "2023-10-01-preview",
      "name": "[variables('openAiName')]",
      "location": "[parameters('location')]",
      "kind": "OpenAI",
      "sku": {
        "name": "S0"
      },
      "properties": {
        "customSubDomainName": "[variables('openAiName')]",
        "publicNetworkAccess": "Enabled"
      }
    },
    {
      "type": "Microsoft.CognitiveServices/accounts/deployments",
      "apiVersion": "2023-10-01-preview",
      "name": "[format('{0}/{1}', variables('openAiName'), parameters('openAiModelName'))]",
      "sku": {
        "name": "Standard",
        "capacity": "[parameters('openAiCapacity')]"
      },
      "properties": {
        "model": {
          "format": "OpenAI",
          "name": "[parameters('openAiModelName')]",
          "version": "[parameters('openAiModelVersion')]"
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.CognitiveServices/accounts', variables('openAiName'))]"
      ]
    },
    {
      "type": "Microsoft.OperationalInsights/workspaces",
      "apiVersion": "2022-10-01",
      "name": "[variables('logAnalyticsName')]",
      "location": "[parameters('location')]",
      "properties": {
        "sku": {
          "name": "PerGB2018"
        },
        "retentionInDays": 30
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults",
      "apiVersion": "2023-07-01",
      "name": "[variables('kvName')]",
      "location": "[parameters('location')]",
      "properties": {
        "sku": {
          "family": "A",
          "name": "standard"
        },
        "tenantId": "[subscription().tenantId]",
        "enableRbacAuthorization": false,
        "accessPolicies": []
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "2023-07-01",
      "name": "[format('{0}/{1}', variables('kvName'), 'app-password')]",
      "properties": {
        "value": "[parameters('appPassword')]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.KeyVault/vaults', variables('kvName'))]"
      ]
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "2023-07-01",
      "name": "[format('{0}/{1}', variables('kvName'), 'openai-api-key')]",
      "properties": {
        "value": "[listKeys(resourceId('Microsoft.CognitiveServices/accounts', variables('openAiName')), '2023-10-01-preview').key1]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.KeyVault/vaults', variables('kvName'))]",
        "[resourceId('Microsoft.CognitiveServices/accounts', variables('openAiName'))]"
      ]
    },
    {
      "type": "Microsoft.ContainerRegistry/registries",
      "apiVersion": "2023-07-01",
      "name": "[variables('acrName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "Basic"
      },
      "properties": {
        "adminUserEnabled": true
      }
    },
    {
      "type": "Microsoft.App/managedEnvironments",
      "apiVersion": "2023-11-02-preview",
      "name": "[variables('containerAppEnvName')]",
      "location": "[parameters('location')]",
      "properties": {
        "appLogsConfiguration": {
          "destination": "log-analytics",
          "logAnalyticsConfiguration": {
            "customerId": "[reference(resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsName')), '2022-10-01').customerId]",
            "sharedKey": "[listKeys(resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsName')), '2022-10-01').primarySharedKey]"
          }
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsName'))]"
      ]
    },
    {
      "type": "Microsoft.App/containerApps",
      "apiVersion": "2023-11-02-preview",
      "name": "[variables('containerAppName')]",
      "location": "[parameters('location')]",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "managedEnvironmentId": "[resourceId('Microsoft.App/managedEnvironments', variables('containerAppEnvName'))]",
        "configuration": {
          "ingress": {
            "external": true,
            "targetPort": 8000,
            "transport": "auto",
            "allowInsecure": false
          },
          "secrets": [
            {
              "name": "openai-api-key",
              "value": "[listKeys(resourceId('Microsoft.CognitiveServices/accounts', variables('openAiName')), '2023-10-01-preview').key1]"
            },
            {
              "name": "app-password",
              "value": "[parameters('appPassword')]"
            },
            {
              "name": "acr-password",
              "value": "[listCredentials(resourceId('Microsoft.ContainerRegistry/registries', variables('acrName')), '2023-07-01').passwords[0].value]"
            }
          ],
          "registries": [
            {
              "server": "[reference(resourceId('Microsoft.ContainerRegistry/registries', variables('acrName')), '2023-07-01').loginServer]",
              "username": "[variables('acrName')]",
              "passwordSecretRef": "acr-password"
            }
          ]
        },
        "template": {
          "containers": [
            {
              "name": "researcher-api",
              "image": "[format('{0}/kaia-researcher-api:{1}', reference(resourceId('Microsoft.ContainerRegistry/registries', variables('acrName')), '2023-07-01').loginServer, parameters('containerImageTag'))]",
              "resources": {
                "cpu": "[json(parameters('cpuCores'))]",
                "memory": "[parameters('memory')]"
              },
              "env": [
                {
                  "name": "OPENAI_API_KEY",
                  "secretRef": "openai-api-key"
                },
                {
                  "name": "AZURE_OPENAI_ENDPOINT",
                  "value": "[reference(resourceId('Microsoft.CognitiveServices/accounts', variables('openAiName')), '2023-10-01-preview').endpoint]"
                },
                {
                  "name": "AZURE_OPENAI_API_VERSION",
                  "value": "2024-10-21"
                },
                {
                  "name": "OPENAI_MODEL",
                  "value": "[parameters('openAiModelName')]"
                },
                {
                  "name": "RESEARCHER_APP_PASSWORD",
                  "secretRef": "app-password"
                },
                {
                  "name": "DEFAULT_LLM_PROVIDER",
                  "value": "openai"
                },
                {
                  "name": "ENABLE_OPENAI_SEARCH",
                  "value": "true"
                },
                {
                  "name": "LOG_ANALYTICS_WORKSPACE_ID",
                  "value": "[reference(resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsName')), '2022-10-01').customerId]"
                }
              ]
            }
          ],
          "scale": {
            "minReplicas": "[parameters('minReplicas')]",
            "maxReplicas": "[parameters('maxReplicas')]"
          }
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.ContainerRegistry/registries', variables('acrName'))]",
        "[resourceId('Microsoft.App/managedEnvironments', variables('containerAppEnvName'))]",
        "[resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsName'))]",
        "[resourceId('Microsoft.CognitiveServices/accounts', variables('openAiName'))]"
      ]
    },
    {
      "type": "Microsoft.KeyVault/vaults/accessPolicies",
      "apiVersion": "2023-07-01",
      "name": "[format('{0}/{1}', variables('kvName'), 'add')]",
      "properties": {
        "accessPolicies": [
          {
            "tenantId": "[subscription().tenantId]",
            "objectId": "[reference(resourceId('Microsoft.App/containerApps', variables('containerAppName')), '2023-11-02-preview', 'full').identity.principalId]",
            "permissions": {
              "secrets": [
                "get",
                "list"
              ]
            }
          }
        ]
      },
      "dependsOn": [
        "[resourceId('Microsoft.App/containerApps', variables('containerAppName'))]",
        "[resourceId('Microsoft.KeyVault/vaults', variables('kvName'))]"
      ]
    }
  ],
  "outputs": {
    "acrLoginServer": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.ContainerRegistry/registries', variables('acrName')), '2023-07-01').loginServer]"
    },
    "acrName": {
      "type": "string",
      "value": "[variables('acrName')]"
    },
    "keyVaultName": {
      "type": "string",
      "value": "[variables('kvName')]"
    },
    "containerAppUrl": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.App/containerApps', variables('containerAppName')), '2023-11-02-preview').configuration.ingress.fqdn]"
    },
    "openAiEndpoint": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.CognitiveServices/accounts', variables('openAiName')), '2023-10-01-preview').endpoint]"
    },
    "openAiDeployment": {
      "type": "string",
      "value": "[parameters('openAiModelName')]"
    },
    "logAnalyticsWorkspaceId": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsName')), '2022-10-01').customerId]"
    }
  }
}